<h1>Burgers</h1>

<h2>Burger List</h2>

<ul>
  {{#each burgers}}
    {{#unless this.devour}}
      <li>
        {{this.name}}

        <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
          <button type="submit">Devour it!</button>
        </form>
      </li>
      {{/unless}}
  {{/each}}
</ul>

<h2 id="notEaten">Burgers that have been eaten.</h2>

<ul>
  {{#each burgers}}
    {{#if this.devour}}
      <li>
        {{this.name}}

        <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
        <input type="hidden" name="devour" value="false" />
          <button type="submit">Eat it!</button>
        </form>
      </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-update-form" action="burgers/create" method="POST">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="slee">Eat?</label><br>
    <input type="radio" name="devour" value="1" checked> Eat!<br>
    <input type="radio" name="devour" value="0"> Not eaten!
  </div>

  <button type="submit">Add Burger</button>
</form>
